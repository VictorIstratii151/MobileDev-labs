<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vic.pamlab5.Welcome">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Welcome"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19"/>

    <Button
        android:id="@+id/buttonSignUp"
        style="@style/NoCapsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@color/button_1_background"
        android:text="Sign Up"
        android:textColor="@color/text_color_1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewWelcome"
        app:layout_constraintRight_toRightOf="@+id/textViewWelcome"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescription"/>

    <Button
        android:id="@+id/buttonLogIn"
        style="@style/NoCapsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@color/button_1_background"
        android:text="Log In"
        android:textColor="@color/text_color_1"
        app:layout_constraintLeft_toLeftOf="@+id/buttonSignUp"
        app:layout_constraintRight_toRightOf="@+id/buttonSignUp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignUp"
        app:layout_constraintHorizontal_bias="0.531"/>

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcome"/>

    <Button
        android:id="@+id/buttonUrgent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:text="Urgent"
        android:textStyle="bold"
        android:textColor="@color/text_color_1"
        android:background="#00000000"
        app:layout_constraintLeft_toLeftOf="@+id/buttonLogIn"
        app:layout_constraintRight_toRightOf="@+id/buttonLogIn"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogIn"
        app:layout_constraintHorizontal_bias="0.513"/>
</android.support.constraint.ConstraintLayout>
