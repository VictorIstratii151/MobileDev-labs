<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vic.lab2.NotificationActivity">

    <TextView
        android:id="@+id/textViewGreeting"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="61dp"
        android:text="Looks like You have something to do now!"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:text="Name of event: "
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTime"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewTime"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textViewTime"
        app:layout_constraintHorizontal_bias="0.491"/>

    <TextView
        android:id="@+id/textViewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:text="Note to Yourself: "
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewName"
        app:layout_constraintRight_toRightOf="@+id/textViewName"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"/>

    <Button
        android:id="@+id/buttonDismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:text="Dismiss"
        app:layout_constraintLeft_toLeftOf="@+id/textViewNote"
        app:layout_constraintRight_toRightOf="@+id/textViewNote"
        app:layout_constraintTop_toBottomOf="@+id/textViewNote"/>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It's "
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewGreeting"
        app:layout_constraintRight_toRightOf="@+id/textViewGreeting"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewGreeting"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>
